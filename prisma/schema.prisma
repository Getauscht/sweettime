// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id                      String    @id @default(cuid())
  name                    String?
  email                   String?   @unique
  emailVerified           DateTime?
  password                String?
  image                   String?
  totpEnabled             Boolean   @default(false)
  totpSecretEncrypted     String?
  totpTempSecretEncrypted String?
  totpTempExpires         DateTime?
  roleId                  String?
  status                  String    @default("active") // active, suspended, banned
  mustChangePassword      Boolean   @default(false) // for WordPress imports and forced password resets
  lastActive              DateTime  @default(now())
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

  accounts          Account[]
  sessions          Session[]
  passwordResets    PasswordReset[]
  magicLinks        MagicLink[]
  role              Role?              @relation(fields: [roleId], references: [id], onDelete: SetNull)
  favorites         Favorite[]
  follows           Follow[]
  readingHistory    ReadingHistory[]
  comments          Comment[]
  commentsMention   CommentMention[]
  commentLikes      CommentLike[]
  commentReports    CommentReport[]
  webtoonRatings    WebtoonRating[]
  novelRatings      NovelRating[]
  // relation to group memberships
  groupMembers      GroupMember[]
  Invite            Invite[]
  // web push subscriptions
  pushSubscriptions PushSubscription[]

  @@index([roleId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordReset {
  id        String   @id @default(cuid())
  userId    String
  token     String?
  tokenHash String?  @unique
  expires   DateTime
  createdAt DateTime @default(now())
  used      Boolean  @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model MagicLink {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([tokenHash])
}

model Settings {
  id                  String   @id @default(cuid())
  siteName            String   @default("Sweettime")
  fromName            String   @default("Sweettime")
  fromEmail           String   @default("no-reply@sweettime.com")
  // Optional branding assets managed via admin panel
  logoUrl             String?
  faviconUrl          String?
  magicLinkTtlMinutes Int      @default(60)
  magicLinkEnabled    Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

// RBAC System
model Role {
  id          String   @id @default(cuid())
  name        String   @unique // admin, moderator, author, reader, custom roles
  description String?
  isSystem    Boolean  @default(false) // system roles cannot be deleted
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users           User[]
  rolePermissions RolePermission[]
}

model Permission {
  id          String   @id @default(cuid())
  name        String   @unique // webtoons.create, webtoons.edit, users.manage, etc
  description String?
  category    String // webtoons, users, authors, genres, analytics, system
  createdAt   DateTime @default(now())

  rolePermissions RolePermission[]
}

model RolePermission {
  id           String   @id @default(cuid())
  roleId       String
  permissionId String
  createdAt    DateTime @default(now())

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
  @@index([roleId])
  @@index([permissionId])
}

// Content Management
model Webtoon {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String?  @db.Text
  coverImage  String?
  bannerImage String?
  status      String   @default("ongoing") // ongoing, completed, hiatus, cancelled
  views       Int      @default(0)
  likes       Int      @default(0)
  rating      Float    @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // chapters and relations
  chapters       Chapter[]
  webtoonGroups  WebtoonGroup[] // Many-to-many with ScanlationGroups (optional)
  genres         WebtoonGenre[]
  favorites      Favorite[]
  webtoonRatings WebtoonRating[]
  readingHistory ReadingHistory[]
  comments       Comment[]
  credits        WebtoonCredit[]
  author         Author[]

  @@index([slug])
  @@index([status])
}

// Work type enum to support multiple content types (webtoon, novel)
enum WorkType {
  WEBTOON
  NOVEL
}

// Novels are textual works (novels/serialized prose)
model Novel {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String?  @db.Text
  coverImage  String?
  bannerImage String?
  status      String   @default("ongoing") // ongoing, completed, hiatus, cancelled
  views       Int      @default(0)
  likes       Int      @default(0)
  rating      Float    @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  // chapters and relations
  chapters       NovelChapter[]
  genres         NovelGenre[]
  favorites      Favorite[]
  readingHistory ReadingHistory[]
  comments       Comment[]
  credits        NovelCredit[]
  novelRatings   NovelRating[]
  novelGroups    NovelGroup[]

  @@index([slug])
  @@index([status])
}

model NovelChapter {
  id          String   @id @default(cuid())
  novelId     String
  number      Int
  title       String?
  content     String   @db.Text // Markdown content for novels
  views       Int      @default(0)
  likes       Int      @default(0)
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // For novels we store markdown content; each novel chapter is created by a scanlation group
  novel Novel @relation(fields: [novelId], references: [id], onDelete: Cascade)

  // Required scanlationGroupId - novel chapters are created by groups (parity with webtoon chapters)
  scanlationGroupId String
  scanlationGroup   ScanlationGroup @relation(fields: [scanlationGroupId], references: [id], onDelete: Restrict)

  readingHistory ReadingHistory[]
  comments       Comment[]

  @@unique([novelId, number])
  @@index([novelId])
  @@index([scanlationGroupId])
  @@index([publishedAt])
}

// Per-user rating for webtoons. Rating is between 0.5 and 5.0 (inclusive), step 0.5
model WebtoonRating {
  id        String   @id @default(cuid())
  userId    String
  webtoonId String
  rating    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  webtoon Webtoon @relation(fields: [webtoonId], references: [id], onDelete: Cascade)

  @@unique([userId, webtoonId])
  @@index([userId])
  @@index([webtoonId])
}

// Per-user rating for novels. Rating is between 0.5 and 5.0 (inclusive), step 0.5
model NovelRating {
  id        String   @id @default(cuid())
  userId    String
  novelId   String
  rating    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  novel Novel @relation(fields: [novelId], references: [id], onDelete: Cascade)

  @@unique([userId, novelId])
  @@index([userId])
  @@index([novelId])
}

model Author {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  bio         String?  @db.Text
  avatar      String?
  socialLinks Json? // {twitter, instagram, website, etc}
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  follows        Follow[]
  webtoonCredits WebtoonCredit[]
  novelCredits   NovelCredit[]
  webtoon        Webtoon[]

  @@index([slug])
}

model WebtoonCredit {
  id        String @id @default(cuid())
  webtoonId String
  authorId  String
  role      String // AUTHOR, ARTIST

  webtoon Webtoon @relation(fields: [webtoonId], references: [id], onDelete: Cascade)
  author  Author  @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@unique([webtoonId, authorId, role])
  @@index([webtoonId])
  @@index([authorId])
}

model NovelCredit {
  id       String @id @default(cuid())
  novelId  String
  authorId String
  role     String // AUTHOR, EDITOR

  novel  Novel  @relation(fields: [novelId], references: [id], onDelete: Cascade)
  author Author @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@unique([novelId, authorId, role])
  @@index([novelId])
  @@index([authorId])
}

model Genre {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  webtoons WebtoonGenre[]
  novels   NovelGenre[]

  @@index([slug])
}

model WebtoonGenre {
  id        String   @id @default(cuid())
  webtoonId String
  genreId   String
  createdAt DateTime @default(now())

  webtoon Webtoon @relation(fields: [webtoonId], references: [id], onDelete: Cascade)
  genre   Genre   @relation(fields: [genreId], references: [id], onDelete: Cascade)

  @@unique([webtoonId, genreId])
  @@index([webtoonId])
  @@index([genreId])
}

model NovelGenre {
  id        String   @id @default(cuid())
  novelId   String
  genreId   String
  createdAt DateTime @default(now())

  novel Novel @relation(fields: [novelId], references: [id], onDelete: Cascade)
  genre Genre @relation(fields: [genreId], references: [id], onDelete: Cascade)

  @@unique([novelId, genreId])
  @@index([novelId])
  @@index([genreId])
}

model Chapter {
  id          String   @id @default(cuid())
  webtoonId   String
  number      Int
  title       String?
  content     Json // Array of image URLs or content data
  views       Int      @default(0)
  likes       Int      @default(0)
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Required scanlationGroupId - chapters are created by groups
  scanlationGroupId String
  scanlationGroup   ScanlationGroup @relation(fields: [scanlationGroupId], references: [id], onDelete: Restrict)

  webtoon        Webtoon          @relation(fields: [webtoonId], references: [id], onDelete: Cascade)
  readingHistory ReadingHistory[]
  comments       Comment[]

  @@unique([webtoonId, number])
  @@index([webtoonId])
  @@index([publishedAt])
  @@index([scanlationGroupId])
}

// Activity & Analytics
model ActivityLog {
  id          String   @id @default(cuid())
  action      String // created, updated, deleted, etc
  entityType  String // webtoon, author, genre, user
  entityId    String
  details     String?  @db.Text
  performedBy String? // userId or "system"
  createdAt   DateTime @default(now())

  @@index([entityType, entityId])
  @@index([createdAt])
  @@index([performedBy])
}

// Notifications
model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String // new_chapter, comment, follow, admin_action, system
  title     String
  message   String   @db.Text
  link      String? // URL to navigate when clicked
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([userId, isRead])
  @@index([createdAt])
}

// Stores Web Push Subscriptions for users
model PushSubscription {
  id           String   @id @default(cuid())
  userId       String
  // raw endpoint can be long; store as Text. Use endpointHash (sha256) as unique key for upserts.
  endpoint     String   @db.Text
  endpointHash String   @unique
  keys         Json // stores { p256dh, auth }
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Favorites & Follows
model Favorite {
  id        String   @id @default(cuid())
  userId    String
  webtoonId String?
  novelId   String?
  createdAt DateTime @default(now())

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  webtoon Webtoon? @relation(fields: [webtoonId], references: [id], onDelete: Cascade)
  novel   Novel?   @relation(fields: [novelId], references: [id], onDelete: Cascade)

  @@unique([userId, webtoonId])
  @@unique([userId, novelId])
  @@index([userId])
  @@index([webtoonId])
  @@index([novelId])
}

model Follow {
  id        String   @id @default(cuid())
  userId    String
  authorId  String
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  author Author @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@unique([userId, authorId])
  @@index([userId])
  @@index([authorId])
}

// Reading History
model ReadingHistory {
  id        String  @id @default(cuid())
  userId    String? // null for anonymous users
  sessionId String? // for anonymous tracking

  // Support both legacy and new unified fields
  workId   String? // unified: webtoonId or novelId
  workType WorkType? // unified: WEBTOON or NOVEL

  // Legacy separate fields
  webtoonId      String?
  chapterId      String?
  novelId        String?
  novelChapterId String?

  progress   Float    @default(0) // percentage read
  lastReadAt DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user         User?         @relation(fields: [userId], references: [id], onDelete: Cascade)
  webtoon      Webtoon?      @relation(fields: [webtoonId], references: [id], onDelete: Cascade)
  chapter      Chapter?      @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  novel        Novel?        @relation(fields: [novelId], references: [id], onDelete: Cascade)
  novelChapter NovelChapter? @relation(fields: [novelChapterId], references: [id], onDelete: Cascade)

  @@unique([userId, webtoonId, chapterId])
  @@unique([sessionId, webtoonId, chapterId])
  @@unique([userId, novelId, novelChapterId])
  @@unique([sessionId, novelId, novelChapterId])
  @@index([userId])
  @@index([sessionId])
  @@index([workId])
  @@index([webtoonId])
  @@index([novelId])
  @@index([lastReadAt])
}

// Comments & Mentions
model Comment {
  id             String    @id @default(cuid())
  userId         String
  webtoonId      String?
  chapterId      String?
  novelId        String?
  novelChapterId String?
  parentId       String? // For nested replies
  content        String    @db.Text
  likes          Int       @default(0)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  deletedAt      DateTime?
  deletedBy      String? // 'owner' | 'moderator'

  user         User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  webtoon      Webtoon?         @relation(fields: [webtoonId], references: [id], onDelete: Cascade)
  chapter      Chapter?         @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  novel        Novel?           @relation(fields: [novelId], references: [id], onDelete: Cascade)
  novelChapter NovelChapter?    @relation(fields: [novelChapterId], references: [id], onDelete: Cascade)
  parent       Comment?         @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies      Comment[]        @relation("CommentReplies")
  mentions     CommentMention[]
  likedBy      CommentLike[]
  reports      CommentReport[]

  @@index([userId])
  @@index([webtoonId])
  @@index([chapterId])
  @@index([novelId])
  @@index([novelChapterId])
  @@index([parentId])
  @@index([createdAt])
}

model CommentMention {
  id        String   @id @default(cuid())
  commentId String
  userId    String
  createdAt DateTime @default(now())

  comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([commentId, userId])
  @@index([userId])
}

model CommentLike {
  id        String   @id @default(cuid())
  commentId String
  userId    String
  createdAt DateTime @default(now())

  comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, commentId])
  @@index([commentId])
  @@index([userId])
}

model CommentReport {
  id        String   @id @default(cuid())
  commentId String
  userId    String
  reason    String // harassment, spam, inappropriate, other
  details   String?  @db.Text
  status    String   @default("pending") // pending, reviewed, resolved, dismissed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, commentId])
  @@index([commentId])
  @@index([userId])
  @@index([status])
}

// Scanlation / Groups
enum GroupRole {
  LEADER
  MEMBER
  UPLOADER
}

model ScanlationGroup {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?  @db.Text
  socialLinks Json? // { x, discord, facebook, instagram, website }
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members       GroupMember[]
  webtoonGroups WebtoonGroup[] // Many-to-many with Webtoons (optional)
  novelGroups   NovelGroup[]
  chapters      Chapter[]
  // relation back to novel chapters created by this group
  novelChapters NovelChapter[]
  Invite        Invite[]

  @@index([slug])
}

// Many-to-many relationship between Webtoons and ScanlationGroups
// Tracks which groups have claimed/are working on which webtoons
model WebtoonGroup {
  id        String   @id @default(cuid())
  webtoonId String
  groupId   String
  claimedAt DateTime @default(now())

  webtoon Webtoon         @relation(fields: [webtoonId], references: [id], onDelete: Cascade)
  group   ScanlationGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([webtoonId, groupId])
  @@index([webtoonId])
  @@index([groupId])
}

// Many-to-many relationship between Novels and ScanlationGroups
// Tracks which groups have claimed/are working on which novels
model NovelGroup {
  id       String   @id @default(cuid())
  novelId  String
  groupId  String
  clamedAt DateTime @default(now())

  novel Novel           @relation(fields: [novelId], references: [id], onDelete: Cascade)
  group ScanlationGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([novelId, groupId])
  @@index([novelId])
  @@index([groupId])
}

model GroupMember {
  id       String    @id @default(cuid())
  userId   String
  groupId  String
  role     GroupRole @default(MEMBER)
  joinedAt DateTime  @default(now())

  user  User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  group ScanlationGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
  @@index([groupId])
  @@index([userId])
}

// Add nullable FK fields to content models to allow progressive migration
// (nullable initially; will be made required in final migration step)

// Invitations for users to join ScanlationGroups
model Invite {
  id          String   @id @default(cuid())
  email       String
  token       String   @unique
  groupId     String
  createdById String?
  expiresAt   DateTime
  accepted    Boolean  @default(false)
  createdAt   DateTime @default(now())

  group     ScanlationGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  createdBy User?           @relation(fields: [createdById], references: [id], onDelete: SetNull)

  @@index([groupId])
  @@index([email])
}
