// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?
  image         String?
  totpEnabled   Boolean   @default(false)
  totpSecretEncrypted String?
  totpTempSecretEncrypted String?
  totpTempExpires DateTime?
  roleId        String?
  status        String    @default("active") // active, suspended, banned
  lastActive    DateTime  @default(now())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts       Account[]
  sessions       Session[]
  passwordResets PasswordReset[]
  role           Role?     @relation(fields: [roleId], references: [id], onDelete: SetNull)
  favorites      Favorite[]
  follows        Follow[]
  readingHistory ReadingHistory[]
  comments       Comment[]
  commentsMention CommentMention[]
  commentLikes   CommentLike[]
  commentReports CommentReport[]

  @@index([roleId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordReset {
  id        String   @id @default(cuid())
  userId    String
  token     String?
  tokenHash String?  @unique
  expires   DateTime
  createdAt DateTime @default(now())
  used      Boolean  @default(false)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// RBAC System
model Role {
  id          String   @id @default(cuid())
  name        String   @unique // admin, moderator, author, reader, custom roles
  description String?
  isSystem    Boolean  @default(false) // system roles cannot be deleted
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users           User[]
  rolePermissions RolePermission[]
}

model Permission {
  id          String   @id @default(cuid())
  name        String   @unique // webtoons.create, webtoons.edit, users.manage, etc
  description String?
  category    String   // webtoons, users, authors, genres, analytics, system
  createdAt   DateTime @default(now())

  rolePermissions RolePermission[]
}

model RolePermission {
  id           String   @id @default(cuid())
  roleId       String
  permissionId String
  createdAt    DateTime @default(now())

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
  @@index([roleId])
  @@index([permissionId])
}

// Content Management
model Webtoon {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String?  @db.Text
  coverImage  String?
  status      String   @default("ongoing") // ongoing, completed, hiatus, cancelled
  views       Int      @default(0)
  likes       Int      @default(0)
  rating      Float    @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  chapters       Chapter[]
  genres         WebtoonGenre[]
  favorites      Favorite[]
  readingHistory ReadingHistory[]
  comments       Comment[]
  credits        WebtoonCredit[]
  author         Author[]

  @@index([slug])
  @@index([status])
}

model Author {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  bio         String?  @db.Text
  avatar      String?
  socialLinks Json?    // {twitter, instagram, website, etc}
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  follows        Follow[]
  webtoonCredits WebtoonCredit[]
  webtoon        Webtoon[]

  @@index([slug])
}

model WebtoonCredit {
  id        String @id @default(cuid())
  webtoonId String
  authorId  String
  role      String // AUTHOR, ARTIST

  webtoon Webtoon @relation(fields: [webtoonId], references: [id], onDelete: Cascade)
  author  Author  @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@unique([webtoonId, authorId, role])
  @@index([webtoonId])
  @@index([authorId])
}

model Genre {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  webtoons WebtoonGenre[]

  @@index([slug])
}

model WebtoonGenre {
  id        String   @id @default(cuid())
  webtoonId String
  genreId   String
  createdAt DateTime @default(now())

  webtoon Webtoon @relation(fields: [webtoonId], references: [id], onDelete: Cascade)
  genre   Genre   @relation(fields: [genreId], references: [id], onDelete: Cascade)

  @@unique([webtoonId, genreId])
  @@index([webtoonId])
  @@index([genreId])
}

model Chapter {
  id         String   @id @default(cuid())
  webtoonId  String
  number     Int
  title      String?
  content    Json     // Array of image URLs or content data
  views      Int      @default(0)
  likes      Int      @default(0)
  publishedAt DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  webtoon        Webtoon          @relation(fields: [webtoonId], references: [id], onDelete: Cascade)
  readingHistory ReadingHistory[]
  comments       Comment[]

  @@unique([webtoonId, number])
  @@index([webtoonId])
  @@index([publishedAt])
}

// Activity & Analytics
model ActivityLog {
  id          String   @id @default(cuid())
  action      String   // created, updated, deleted, etc
  entityType  String   // webtoon, author, genre, user
  entityId    String
  details     String?  @db.Text
  performedBy String?  // userId or "system"
  createdAt   DateTime @default(now())

  @@index([entityType, entityId])
  @@index([createdAt])
  @@index([performedBy])
}

// Notifications
model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String   // new_chapter, comment, follow, admin_action, system
  title     String
  message   String   @db.Text
  link      String?  // URL to navigate when clicked
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([userId, isRead])
  @@index([createdAt])
}

// Favorites & Follows
model Favorite {
  id        String   @id @default(cuid())
  userId    String
  webtoonId String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  webtoon Webtoon @relation(fields: [webtoonId], references: [id], onDelete: Cascade)

  @@unique([userId, webtoonId])
  @@index([userId])
  @@index([webtoonId])
}

model Follow {
  id         String   @id @default(cuid())
  userId     String
  authorId   String
  createdAt  DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  author Author @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@unique([userId, authorId])
  @@index([userId])
  @@index([authorId])
}

// Reading History
model ReadingHistory {
  id          String   @id @default(cuid())
  userId      String?  // null for anonymous users
  sessionId   String?  // for anonymous tracking
  webtoonId   String
  chapterId   String
  progress    Float    @default(0) // percentage read
  lastReadAt  DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user    User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  webtoon Webtoon  @relation(fields: [webtoonId], references: [id], onDelete: Cascade)
  chapter Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([sessionId])
  @@index([webtoonId])
  @@index([lastReadAt])
  @@unique([userId, webtoonId, chapterId])
  @@unique([sessionId, webtoonId, chapterId])
}

// Comments & Mentions
model Comment {
  id        String   @id @default(cuid())
  userId    String
  webtoonId String?
  chapterId String?
  parentId  String? // For nested replies
  content   String   @db.Text
  likes     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  webtoon  Webtoon?         @relation(fields: [webtoonId], references: [id], onDelete: Cascade)
  chapter  Chapter?         @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  parent   Comment?         @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies  Comment[]        @relation("CommentReplies")
  mentions CommentMention[]
  likedBy  CommentLike[]
  reports  CommentReport[]

  @@index([userId])
  @@index([webtoonId])
  @@index([chapterId])
  @@index([parentId])
  @@index([createdAt])
}

model CommentMention {
  id        String   @id @default(cuid())
  commentId String
  userId    String
  createdAt DateTime @default(now())

  comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([commentId, userId])
  @@index([userId])
}

model CommentLike {
  id        String   @id @default(cuid())
  commentId String
  userId    String
  createdAt DateTime @default(now())

  comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, commentId])
  @@index([commentId])
  @@index([userId])
}

model CommentReport {
  id        String   @id @default(cuid())
  commentId String
  userId    String
  reason    String   // harassment, spam, inappropriate, other
  details   String?  @db.Text
  status    String   @default("pending") // pending, reviewed, resolved, dismissed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, commentId])
  @@index([commentId])
  @@index([userId])
  @@index([status])
}